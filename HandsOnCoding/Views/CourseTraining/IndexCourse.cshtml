@model IEnumerable<HandsOnCoding.Models.Course>

@{
    ViewData["Title"] = "IndexCourse";
}

<h1>IndexCourse</h1>

<p>
    <a class ="btn btn-md btn-success" asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseDuration)
            </td>
            <td>
                    @if (item.CourseStatus == true)
                    {
                        <span class="badge badge-success" style="background-color:green;">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-danger" style="background-color:red">Not Active</span>
                    }
                    @* @Html.DisplayFor(modelItem => item.CourseStatus) *@
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.CourseId">Edit</a>
                <a class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@item.CourseId">Details</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.CourseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
